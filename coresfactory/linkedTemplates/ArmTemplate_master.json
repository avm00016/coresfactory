{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "coresfactory"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"AzureSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase1'"
		},
		"DS_BLOB_ENTRADA_properties_typeProperties_fileName": {
			"type": "string",
			"defaultValue": "@dataset().nombreFichero"
		},
		"DS_BLOB_ENTRADA_properties_typeProperties_folderPath": {
			"type": "string",
			"defaultValue": "@dataset().nombreDirectorio"
		},
		"DS_BLOB_HISTORICO_properties_typeProperties_fileName": {
			"type": "string",
			"defaultValue": "@dataset().nombreFichero"
		},
		"DS_BLOB_HISTORICO_properties_typeProperties_folderPath": {
			"type": "string",
			"defaultValue": "historico"
		},
		"TR_CAP_properties_PL_EstCapacidades_parameters_nombreFichero": {
			"type": "string",
			"defaultValue": "@triggerBody().fileName"
		},
		"TR_CAP_properties_PL_EstCapacidades_parameters_nombreDirectorio": {
			"type": "string",
			"defaultValue": "@triggerBody().folderPath"
		},
		"TR_CAP_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/5a872d64-36b9-4adf-b9c4-e6ba85cf4457/resourceGroups/CORES_Training/providers/Microsoft.Storage/storageAccounts/coresca"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas Token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"AzureSqlDatabase1_connectionString": {
						"value": "[parameters('AzureSqlDatabase1_connectionString')]"
					},
					"DS_BLOB_ENTRADA_properties_typeProperties_fileName": {
						"value": "[parameters('DS_BLOB_ENTRADA_properties_typeProperties_fileName')]"
					},
					"DS_BLOB_ENTRADA_properties_typeProperties_folderPath": {
						"value": "[parameters('DS_BLOB_ENTRADA_properties_typeProperties_folderPath')]"
					},
					"DS_BLOB_HISTORICO_properties_typeProperties_fileName": {
						"value": "[parameters('DS_BLOB_HISTORICO_properties_typeProperties_fileName')]"
					},
					"DS_BLOB_HISTORICO_properties_typeProperties_folderPath": {
						"value": "[parameters('DS_BLOB_HISTORICO_properties_typeProperties_folderPath')]"
					},
					"TR_CAP_properties_PL_EstCapacidades_parameters_nombreFichero": {
						"value": "[parameters('TR_CAP_properties_PL_EstCapacidades_parameters_nombreFichero')]"
					},
					"TR_CAP_properties_PL_EstCapacidades_parameters_nombreDirectorio": {
						"value": "[parameters('TR_CAP_properties_PL_EstCapacidades_parameters_nombreDirectorio')]"
					},
					"TR_CAP_properties_typeProperties_scope": {
						"value": "[parameters('TR_CAP_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}