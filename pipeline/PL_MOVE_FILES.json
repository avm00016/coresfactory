{
	"name": "PL_MOVE_FILES",
	"properties": {
		"activities": [
			{
				"name": "IF_FILENAME_OK",
				"type": "IfCondition",
				"typeProperties": {
					"expression": {
						"value": "@contains(pipeline().parameters.filePrefix, substring(pipeline().parameters.sourceFile,0,3))",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "CP_IN_HIST",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "BlobSource",
									"recursive": false
								},
								"sink": {
									"type": "BlobSink"
								},
								"enableStaging": false,
								"dataIntegrationUnits": 0
							},
							"inputs": [
								{
									"referenceName": "DS_BLOB_INPUT",
									"type": "DatasetReference",
									"parameters": {
										"path": "input",
										"filename": {
											"value": "@pipeline().parameters.sourceFile",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DS_BLOB_HISTORY",
									"type": "DatasetReference",
									"parameters": {
										"DestinationFileName": {
											"value": "@pipeline().parameters.sourceFile",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "DL_IN",
							"type": "Delete",
							"dependsOn": [
								{
									"activity": "CP_IN_STG",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"dataset": {
									"referenceName": "DS_BLOB_INPUT",
									"type": "DatasetReference",
									"parameters": {
										"path": "input",
										"filename": {
											"value": "@pipeline().parameters.sourceFile",
											"type": "Expression"
										}
									}
								},
								"enableLogging": false
							}
						},
						{
							"name": "CP_IN_STG",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "CP_IN_HIST",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "BlobSource",
									"recursive": false
								},
								"sink": {
									"type": "BlobSink"
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "DS_BLOB_INPUT",
									"type": "DatasetReference",
									"parameters": {
										"path": "input",
										"filename": {
											"value": "@pipeline().parameters.sourceFile",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"filePrefix": {
				"type": "string"
			},
			"sourceFolder": {
				"type": "string"
			},
			"sourceFile": {
				"type": "string"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}